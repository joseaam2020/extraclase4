<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="BST Tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:textSize="30sp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="8dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextNumber" app:layout_constraintVertical_bias="0.225"/>
    <TextView
            android:text="Nodo:"
            android:layout_width="70dp"
            android:layout_height="34dp" android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:textSize="24sp"/>
    <Button
            android:text="Ingresar"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/ingresar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber" android:layout_marginTop="16dp"/>
    <Button
            android:text="Eliminar"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/eliminar"
            app:layout_constraintTop_toBottomOf="@+id/ingresar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@android:drawable/screen_background_light"
            android:id="@+id/arbolView"
            app:layout_constraintTop_toBottomOf="@+id/eliminar " app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="TODO"/>
</androidx.constraintlayout.widget.ConstraintLayout>